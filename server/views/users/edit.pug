extends ../layouts/application.pug

block header
  .h1.display-4.fw-bold.mt-4= t('views.users.editing')

block content
  +formFor()(action=`/users/${user.id}` method='post')
    each field in ['firstName', 'lastName', 'email', 'password']
      +input(user, field, errors, t(`views.users.${field}`))(type=`${field === 'password' ? field : 'text'}` value=`${user[field]}`)
    +buttonTo('/users/#{user.id}', 'patch')(class='btn btn-success' value=t('views.edit'))
