extends ../layouts/application.pug

block header
  = t('views.users.editUser')

block content
  +formFor()(action=route('users') method='patch')
    each field in ['firstName', 'lastName', 'email', 'password']
      +input(user, field, errors, t(`views.users.${field}`))(type=`${field === 'password' ? field : 'text'}` value=`${user[field]}`)
    +buttonTo(`/users/${user.id}`, 'patch')(class='btn btn-success' value=t('views.users.edit'))
