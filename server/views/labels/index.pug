extends ../layouts/index.pug

block prepend header
  - entity = 'labels'
  - headerPath = 'layouts.application.labels'
        
block table
  thead
    tr
      th= t('views.id')
      th= t('views.name')
      th= t('views.createdAt')
      th= t('views.actions')
  tbody
    each label in labels
      tr
        td= label.id
        td= label.name
        td= formatDate(label.createdAt)
        td
          .d-flex
            a.btn.btn-primary.me-1(href=`/labels/${label.id}/edit`)= t('views.edit')
            +buttonTo(`/labels/${label.id}`, 'delete')(class='btn btn-danger' value=t('views.delete'))
