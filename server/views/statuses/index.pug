extends ../layouts/application.pug

block header
  h1.display-4.fw-bold.mt-4= t('layouts.application.statuses')        

block content
  a.btn.btn-success(href="/statuses/new")= t('views.statuses.create')
  .table-responsive
    table.table.table-borderless.table-striped.mt-5.bg-white
      thead
        tr
          th= t('views.id')
          th= t('views.statuses.name')
          th= t('views.createdAt')
          th= t('views.actions')
      tbody
        each taskStatus in statuses
          tr
            td= taskStatus.id
            td= taskStatus.name
            td= formatDate(taskStatus.createdAt)
            td
              .d-flex
                a(class='btn btn-primary me-1' href=`/statuses/${taskStatus.id}/edit`)= t('views.edit')
                +buttonTo(`/statuses/${taskStatus.id}`, 'delete')(class='btn btn-danger' value=t('views.delete'))
