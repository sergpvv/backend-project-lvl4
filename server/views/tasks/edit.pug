extends ../layouts/application

block header
  h1.display-4.fw-bold.mt-4= t('views.tasks.editing')

block content
  +formFor()(action=`/tasks/${task.id}` method='post')
    +input(task, 'name', errors, t('views.name'))(type='text')
    +input(task, 'description', errors, t('views.tasks.description'), 'textarea')(row='3')
    +input(task, 'statusId', errors, t('views.tasks.status'), 'select', 'statuses')
    +input(task, 'executorId', errors, t('views.tasks.executor'), 'select', 'users')
    +input(task, 'labels', errors, t('views.tasks.labels'), 'select', 'labels')(multiple='multiple')
    +buttonTo(`/tasks/${task.id}`, 'patch')(class='btn btn-success' value=t('views.edit'))
